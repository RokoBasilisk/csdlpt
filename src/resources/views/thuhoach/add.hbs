<div class="container mt-4 lg-col-6 sm-col-12">
    <div class="mb-3 text-center">
        <h2>Thêm Thu Hoạch</h2>
    </div>
    <form action="/thuhoach/add" method="post">
        <div class="mb-3">
            <label for="vuonid" class="form-label">Vườn</label>
            <select name="vuonid" id="vuonid" class="form-control" required>
                <option disabled selected>-- Chọn Vườn --</option>
                {{#each vuon}}
                <option value="{{this.VuonId}}">{{this.VuonId}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label for="thoigianthuhoach" class="form-label">Thời Gian Thu Hoạch</label>
            <input class="form-control" type="date" name="thoigianthuhoach" id="thoigianthuhoach" required>
        </div>
        <div class="mb-3">
            <label for="tongsanluong" class="form-label">Tổng Sản Lượng</label>
            <input class="form-control" type="number" name="tongsanluong" id="tongsanluong" required>
        </div>
        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-primary">Thêm Thu Hoạch</button>
        </div>
    </form>
</div>